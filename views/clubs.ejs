<!DOCTYPE html>
<html data-bs-theme="dark">
<head>
  <title>clubs</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
  
     
</head>
<body class="container my-5">
  <%- include("./partials/header") %> 

  <h1 class="mb-4 mt-4">All Clubs</h1>
  <a href="/create" class="btn btn-primary mb-3">+ Create New Club</a>

  <div class="row">
    <% clubs.forEach(club => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
  <h5 class="card-title"><%= club.name %></h5>
  <p class="card-text"><%= club.description %></p>
  <span class="badge bg-secondary"><%= club.category %></span>
  <div class="mt-3 d-flex justify-content-end gap-2">
  <a href="/clubs/<%= club.id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
  <form action="/clubs/<%= club.id %>?_method=DELETE" method="POST" style="display:inline;">
    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this club?')">Delete</button>
  </form>
</div>
</div>
        </div>
      </div>
    <% }) %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
